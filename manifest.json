{
  "manifest_version": 3,
  "name": "Mambu Auto Logout",
  "description": "Automatically logout from Mambu after an inactivity period",
  "version": "0.2",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "idle",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "*://*.mambu.cloud/"
  ],
  "background" : {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
